{
  "manifest_version": 3,
  "name": "Adverts Distance",
  "short_name": "Mapper",
  "description": "Distance finder",
  "version": "0.1.0",
  "permissions": ["geolocation", "tabs", "storage"],
  "content_scripts": [
    {
      "all_frames": false,
      "matches": ["https://www.adverts.ie/", "https://www.adverts.ie/*"],
      "js": ["./areasData.js", "./main.js"],
      "css": ["./style.css"],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "options.html"
  }
}
